<div class="container justify-content-center" style="padding-top: 100px;">
  <% if @cocktail.photo.attached? == false %>
  <% background_url = image_path 'sample.png' %>
  <% else %>
  <% background_url = image_path 'sample.png' %>
  <% end %>
  <div class="cocktail-card" style="background-image: url('<%= background_url %>'); background-size: cover; height: 500px;">
    <div class="card-infos">
      <h2><%= @cocktail.name %></h2>
      <div>
        <% code = @cocktail.country.downcase %>
        <span class= "flag-icon flag-icon-<%= code %>"></span<% code %>" style="align-items: center;"></span>
        <h2><%= @cocktail.country %></h2>
        <%# raise %>
      </div>
    </div>
  </div>
  <h2>Recipe</h2>
  <table class="table table-bordered">
    <tbody>
      <thead>
        <th>Ingredient</th>
        <th>Description</th>
        <th>Action</th>
      </thead>
      <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.ingredient.name %></td>
        <td><%= dose.description %></td>
        <td>
          <%# link_to "Delete", dose_path(dose), :method => :delete %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete it?" } do %>
          <i class="fa fa-trash destroy_dose"></i>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn-search" %>
</div>
