<div class="banner">
  <div class="container">
    <div class="container">
      <h1>Mixer</h1>
      <h2>Life is short. Mix it up.</h2>
      <p>Here are all cocktails from around the world. Tell us about yours too.</p>
    </div>
    <div class="d-flex col-md-4 col-md-offset-" style="padding-top: 30px; max-width: none;">
      <div class="col"></div>
      <div class="col">
        <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <%= f.input :name, input_html: { :style => 'width: 150px', :value => "" }, placeholder: 'Type cocktail name'%>
        <%= f.submit "Search", class: "btn-search" %>
        <% end %>
      </div>
      <div class="col"></div>
    </div>
    <div>
      <h3 style="padding: 15px 0px 15px;">OR...</h3>
      <%= link_to "Share your own", new_cocktail_path, class: "btn-main" %>
    </div>
  </div>
</div>
<div class="container">
 <div class="row" style="padding-top: 50px;">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
    <%= render "shared/cocktail_card", locals: { cocktail: cocktail } %>
    <% end %>
  </div>
</div>
